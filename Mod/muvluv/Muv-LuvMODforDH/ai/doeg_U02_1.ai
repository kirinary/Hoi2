### 戦争 
## 改良・補充・パニックモード
                           # インフラ補修に使用するＩＣの最大限％
upgrading = 0.1                                # 改良に使用するＩＣの最大限％
reinforcement = 0.3                            # 補充に使用するＩＣの最大限％
desperation = 0.7                              # icがこの％より多く敵に占領されたとき、AIはパニックモードになります
strat_redeploy_threshold = 60                  # この日数以上かかる場合ＡＩが戦略的再配置をする
max_redeploying = 0.25                         # 同時に戦略的再配置をする割合。デフォルト：0.25 
use_offensive_supply = yes                     # AIが攻勢準備を使用するかどうか
max_fuel_offensive = 100                       # 石油消費量がこの値以上の場合、攻勢準備を使用しない (デフォルト：100)
evac_islands = yes                             # AIが低価値な島から部隊を撤退させるかどうか
war = 100                                      # 戦争大好き度「戦争屋度」, この値が高い場合戦争をしたくてうずうずしているらしい
neutrality = 0                                 # 中立政策 ,もし100以上ならば基本的に同盟はしません,この値が高いほど中立でいる。（宣戦布告のしやすさには影響を与えない！）

## 国境での師団数
max_front_ratio = 4.0                          # 他国に対する、前線で対峙する師団数の割合。（デフォルト4.0）(4.0は4倍)
max_front_ratios = { }                         # 特定の国に対して対峙する師団数の割合,max_front_ratioよりもこちらが優先される,負の値をとった場合はその国との国境に兵力を配置しない
exp_force_ratio = 0.0                          # 遠征軍を派遣する割合（デフォルト0.75）(0.75は全陸軍の75％)
no_exp_forces_to = { DDR                       # 軍を派遣しない国(しかし、隣接する同盟国には軍を派遣する可能性もある)
}                         